<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:padding="5dp"
              android:paddingStart="10dp"
              android:paddingEnd="10dp"
              android:id="@+id/rowId"
              android:layoutDirection="rtl">

    <TextView
        android:id="@+id/cell_radif"
        style="@style/list_textView"
        android:layout_weight="1" />



    <TextView
        android:id="@+id/cell_num"
        style="@style/list_textView"
        android:layout_weight="1" />



    <TextView
        android:id="@+id/cell_date"
        style="@style/list_textView"
        android:layout_weight="2"/>


    <TextView
        android:id="@+id/cell_customer"
        style="@style/list_textView"
        android:layout_weight="6" />



    <TextView
        android:id="@+id/cell_total_price"
        style="@style/list_textView_number"
        android:layout_weight="2"
        android:gravity="center"/>


    <ImageView
        android:id="@+id/cell_synced"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@android:drawable/checkbox_off_background"
        style="@style/ImageViewCell"/>
</LinearLayout>